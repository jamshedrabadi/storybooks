<h3>Edit Story</h3>

<div class="row">
    <form action="/stories/{{story._id}}" method="POST" class="col s12">
        {{!-- Hidden input to override request method since only GET and POST can be used by default --}}
        <input type="hidden" name="_method" value="PUT">

        <div class="row">
            <div class="input-field">
                <input type="text" name="title" id="title" value="{{story.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#setDropdownValue story.status}}
                    <option>Choose an option</option>
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    {{/setDropdownValue}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell us your story</h5>
                <textarea name="body" id="body">{{story.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>